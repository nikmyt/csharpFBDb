                                        <RectangleGeometry RadiusX="10" RadiusY="10" Rect="0,0,400,200">
                                        </RectangleGeometry>
                                    </Border.Clip>
                                    <Image Source="/Images/extra/peter.png" Margin="5"/>
                                    <!-- img needs to be more centered-->
